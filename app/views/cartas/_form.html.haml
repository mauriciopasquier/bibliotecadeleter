= form_for @carta do |f|
  - if @carta.errors.any?
    #error_explanation
      %h2= "#{pluralize(@carta.errors.count, "error")} prohibited this carta from being saved:"
      %ul
        - @carta.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :texto
    = f.text_area :texto
  .actions
    = f.submit 'Save'
