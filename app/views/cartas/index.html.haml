#lista
  #paginacion.pagination.pagination-centered
    = paginate @cartas, remote: true

  #cartas.tabla-fluida
    #encabezado.row-fluid
      .nombre.span9 Nombre
      .acciones.span3

    - @cartas.each do |carta|
      .row-fluid{class: cycle('even', 'odd')}
        .nombre.span9= carta.nombre
        .acciones.span3
          - # Aparecen al revés de como están dispuestas por el .pull-right
          - if can? :destroy, carta
            .pull-right= link_to_eliminar carta
          - if can? :edit, carta
            .pull-right= link_to_editar edit_carta_path(carta)
          - if can? :read, carta
            .pull-right= link_to_mostrar carta

  - if can? :create, Carta
    = link_to 'Cargar Carta', new_carta_path
