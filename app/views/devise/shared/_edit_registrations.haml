.row-fluid
  #usuarios
    = form_for  resource, as: resource_name, url: registration_path(resource_name),
                html: { method: :put, class: 'form-horizontal span12' } do |f|

      = render partial: 'devise/registrations/campos_comunes', locals: { f: f }

      .control-group
        = f.label :current_password, class: 'control-label'
        .controls
          = f.password_field :current_password, class: 'span4'
          %span.help-inline= t('.current_password.help')

      .control-group
        = f.label :password, class: 'control-label'
        .controls
          = f.password_field :password, class: 'span4',
            required: requisitos.include?(:password),
            placeholder: t('.password.placeholder')
          %span.help-inline
            = link_to t('.password.help'), 'https://xkcd.com/936'

      .control-group
        = f.label :password_confirmation, class: 'control-label'
        .controls
          = f.password_field :password_confirmation, class: 'span4',
            required: requisitos.include?(:password)

      = render partial: 'devise/shared/cerrar_form',
          locals: { f: f, boton: t('.submit') }
