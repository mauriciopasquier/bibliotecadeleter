%h1= titulo
.row-fluid
  #usuarios
    = form_for  resource, as: resource_name, url: registration_path(resource_name),
                html: { class: 'form-horizontal span12' } do |f|

      = render partial: 'campos_comunes', locals: { f: f }

      .control-group
        = f.label :password, class: 'control-label'
        .controls
          = f.password_field :password, required: true, class: 'span4'
          %span.help-inline
            = link_to t('.password.help'), 'https://xkcd.com/936'

      .control-group
        = f.label :password_confirmation, class: 'control-label'
        .controls
          = f.password_field :password_confirmation, required: true,
            class: 'span4'

      .control-group
        .controls
          = f.submit t('.submit'), class: 'btn btn-success'

      .control-group
        .controls= render partial: "devise/shared/links"
