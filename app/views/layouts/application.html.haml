!!! 5
%html{'xml:lang' => 'es_AR', 'xmlns' => 'http://www.w3.org/1999/xhtml'}
  %head
    %title= titulo
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag     "application", media: 'all'
    = javascript_include_tag  "application"
    = csrf_meta_tags
  %body
    #contenedor
      #cabecera.navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container-fluid
            = link_to 'Biblioteca del Éter', :root, class: 'brand'
            %ul#cuenta.nav.pull-right
              %li= link_to 'Página oficial', 'http://playinferno.com'
              %li= link_to 'Foro', 'http://foro.playinferno.com'
              %li= link_to 'Legales', legales_path
              - # TODO render 'devise/menu/registration_items'
              - # TODO render 'devise/menu/login_items'
            %ul.nav
              %li#buscar= link_to 'Buscar', buscar_cartas_path
              %li= link_to 'Cartas', cartas_path
              %li= link_to 'Artistas', artistas_path
              %li= link_to 'Expansiones', expansiones_path
      #cargando .
      #contenido.container-fluid
        .row-fluid
          .span12
            %h1= @titulo
            = yield
