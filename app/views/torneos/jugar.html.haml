%h1= titulo

= form_for torneo.preparar, url: jugar_torneo_path(torneo),
  html: { method: :put, class: 'form torneo' } do |f|

  = f.error_messages

  = render partial: 'pairings', collection: torneo.pairings, locals: { f: f }

  .row-fluid.botones
    .span12
      = f.submit 'Guardar', class: 'btn btn-success'

.row-fluid.botones
  .span12
    - if can? :edit, torneo
      = link_to 'Cancelar', deshacer_torneo_path(torneo, torneo.ultima_ronda),
        method: :delete,
        data: { confirm: t('.confirmar', ultima: torneo.ultima_ronda) },
        class: 'btn btn-danger'
    - if can? :read, torneo
      = link_to 'Ver', torneo, class: 'btn'
    - if can? :read, Torneo
      = link_to 'Otros torneos', torneos_path, class: 'btn'
