#lista
  = paginacion_tag @artistas

  #artistas.tabla-fluida
    #encabezado.row-fluid
      .nombre.span8= sort_link @busqueda, :nombre, 'Nombre',
        opciones_de_ordenar
      .cantidad.span4= sort_link @busqueda, :cantidad,
        'Cantidad de ilustraciones', opciones_de_ordenar

    - @artistas.each do |artista|
      .row-fluid{class: cycle('even', 'odd')}
        .nombre.span8
          - if can? :read, artista
            = link_to_mostrar artista, artista.nombre
          - else
            = artista.nombre
        .cantidad.span4= artista.cantidad

  = paginacion_tag @artistas, id: 'paginacion-inferior'

  - if can? :create, Artista
    = link_to 'Cargar Artista', new_artista_path
