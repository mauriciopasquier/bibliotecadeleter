#lista
  %h1= @titulo

  #paginacion
    = paginate @artistas, remote: true

  %table#artistas.table.table-striped.table-condensed.table-hover
    %colgroup
      %col#nombre
      %col#cantidad
      %col#acciones
    %thead
      %tr
        %th Nombre
        %th Cantidad de ilustraciones
        %th

    %tbody
      - @artistas.each do |artista|
        %tr
          %td.nombre= artista.nombre
          %td.cantidad= artista.ilustraciones.size
          %td.acciones
            - # Aparecen al revés de como están dispuestas por el .pull-right
            - if can? :destroy, artista
              .pull-right
                = link_to artista, method: :delete, data: { confirm: t(:confirmar) } do
                  = content_tag(:i, nil, class: 'icon-remove-circle')
                  'Eliminar'
            - if can? :edit, artista
              .pull-right
                = link_to edit_artista_path(artista) do
                  = content_tag(:i, nil, class: 'icon-pencil')
                  'Editar'
            - if can? :read, artista
              .pull-right
                = link_to artista do
                  = content_tag(:i, nil, class: 'icon-zoom-in')
                  'Mostrar'
  - if can? :create, Artista
    = link_to 'Cargar Artista', new_artista_path
