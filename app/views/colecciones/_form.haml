= form_for lista, url: path, html: { class: 'form lista' } do |f|
  = f.error_messages

  .row-fluid
    .span11
      = f.label :nombre
      = f.text_field :nombre, class: 'span12', required: true, autofocus: true
    .span1
      = f.label :visible
      = f.check_box_bootstrap :visible, class: 'span12'

  .row-fluid.botones
    .span12
      = f.submit 'Guardar', class: 'btn btn-success'
