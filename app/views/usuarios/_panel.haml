.row-fluid
  .span4
    .pull-left= link_to 'Colección', usuario_coleccion_path(@usuario)
    .pull-right= coleccion_actual.cantidad

  .span4
    .pull-left= link_to 'Reserva', usuario_reserva_path(@usuario)
    .pull-right= reserva_actual.cantidad

  .span4
    .pull-left
      = link_to('Faltantes', faltantes_usuario_coleccion_path(@usuario))
      = '/'
      = link_to('Sobrantes', sobrantes_usuario_coleccion_path(@usuario))
    .pull-right= "#{usuario.cantidad_faltante}/#{usuario.cantidad_sobrante}"

.row-fluid
  .span4
    %h2 Listas
    - usuario.listas.normales.recientes.each do |lista|
      .row-fluid
        .span12
          .pull-left= link_to lista.nombre, [usuario, lista]
          .pull-right
            = lista.cantidad
            = lista.decorate.visibilidad_tag
  .span4
    %h2 Mazos
    - @usuario.mazos.recientes.each do |mazo|
      .row-fluid
        .span12
          .pull-left= link_to mazo.nombre, [usuario, mazo]
          .pull-right
            = mazo.decorate.link_al_formato
            = mazo.decorate.visibilidad_tag
  .span4
    %h2 Diseños
    - @usuario.disenos.recientes.each do |delirio|
      .row-fluid
        .span12
          .pull-left= link_to delirio.nombre, [usuario, delirio]

.row-fluid
  .span4
    - if can? :create, Lista
      = link_to 'Crear lista', new_usuario_lista_path(current_usuario),
        class: 'btn btn-info'
      = link_to 'Ver todas', usuario_listas_path(@usuario), class: 'btn'

  .span4
    - if can? :create, Mazo
      = link_to 'Crear mazo', new_usuario_mazo_path(current_usuario),
        class: 'btn btn-info'
      = link_to 'Ver todos', usuario_mazos_path(@usuario), class: 'btn'

  .span4
    - if can? :create, Diseno
      = link_to 'Crear diseño', new_usuario_diseno_path(current_usuario),
        class: 'btn btn-info'
      = link_to 'Ver todos', usuario_disenos_path(@usuario), class: 'btn'
