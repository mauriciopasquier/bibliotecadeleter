- if can?(:read, forum)
  .row-fluid.forum
    .span9

      %span
        = link_to forem_emojify(forum.title), forem.forum_path(forum), class: "title"
        = '|'
        %span.description= forem_format(forum.description)

      %div
        = t('forem.forums.index.last_post')
        %span.last_post
          - if last_post = forum.last_post_for(forem_user)
            = link_to(forem_emojify(last_post.topic.subject), forem.forum_topic_path(forum, last_post.topic))
            = t('by')
            = link_to last_post.user, main_app.usuario_path(last_post.user)
            %time{datetime: last_post.created_at.to_s(:db)}
              = "#{time_ago_in_words(last_post.created_at)} #{t("ago")}"
          - else
            = t('forem.forums.index.none')

    .topics-count.hidden-phone.span1= topics_count(forum)
    .posts-count.hidden-phone.span1= posts_count(forum)
    .views-count.hidden-phone.span1= forum.views_count
